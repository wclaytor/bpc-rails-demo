<% author_user = nil %>

<% if author_user %>

  <div class="card m-3" id="author_user">

    <div class="card-header text-right">

      <h7><%= current_user.email.split("@").first %> </h7>
      
      <span class="px-2" id="liked">
        <% if author_user.liked %>
          <i class="fa fa-heart fa-lg" aria-hidden="true"></i>
        <% else %>
          <i class="fa fa-heart-o fa-lg" aria-hidden="true"></i>
        <% end %>    
      </span>

      <span>
        <%= link_to '<button type="button" class="btn btn-sm btn-outline-secondary mr-2 my-sm-0">Edit</button>'.html_safe, edit_author_user_path(author_user) %>
      </span>

    </div>

    <div class="card-body">

      <% if author_user.notes != nil && author_user.notes.length > 0 %>

        <h6 class="card-title">Notes:</h6>

        <p class="card-text">
        <%= author_user.notes %>
        </p>

      <% end %>

    </div>
    
  </div>

<% end %>
